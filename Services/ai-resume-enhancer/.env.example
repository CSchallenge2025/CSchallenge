# Local development example for ai-resume-enhancer
# Copy to `.env` and fill in secrets locally. Do NOT commit `.env`.

# MongoDB
MONGO_URL=mongodb://mongo:mongo@localhost:27017/?authSource=admin
MONGO_DB_NAME=resume_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Groq API
GROQ_API_KEY=
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# Pinecone (optional)
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX_NAME=resumes-index

# Feature toggles
ENABLE_CREWAI=false

# Optional Postgres (unused when using MongoDB)
DATABASE_URL=postgresql://postgres:password@postgres:5432/ai_enhancer# Example env vars for local development
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8080
DEBUG=true
REDIS_URL=redis://redis:6379/0
DATABASE_URL=postgresql://postgres:password@postgres:5432/ai_enhancer
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX_NAME=resumes-index
CREWAI_API_KEY=
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256
MONGO_URL=mongodb://mongodb:27017
MONGO_DB_NAME=resume_db
